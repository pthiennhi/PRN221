<Window x:Class="WPFCarRentingSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFCarRentingSystem"
        mc:Ignorable="d"
        Title="FU Car Renting Management System" Height="600" Width="800">
    <StackPanel>
        <Label Content="Email Address" HorizontalAlignment="Center"/>
        <TextBox x:Name="txtEmailAddress" HorizontalAlignment="Center"/>
        <Label Content="Password" HorizontalAlignment="Center"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Center"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Center" Click="btnLogin_Click"/>
    </StackPanel>
</Window>
